// locals: tags

h2. Tags

div style="line-height: 1.7em"
 - tags.each do |t|
  div class="tag tag-#{t.category}"
    span.tag-category = "#{t.category}:"
    a href=path_to(:search_by_tag).with(t.id) = t.title
    a class="ajax-button" href=path_to(:tag).with(t.id) data-method="delete" data-confirm="Delete?"
      img src="/img/del.png"

h2. Legend

ul
  li c : country
  li g : genre
  li i : instrument
  li l : language
  li p : playlist (label, collage, etc)
