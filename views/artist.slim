h1
  = "#{@artist.title} "
  span.details style="font-size: 0.4em"
    = "#{@artist.filename} @"
    a href="https://www.discogs.com/artist/#{@artist.discogs_id}" discogs

- if @new_albums.count > 0
  h2. New folders

  ul
    - @new_albums.each do |a|
      li
        = a
        form method="POST" action=path_to(:album_set_discogs_id)
          input type="text" name="discogs_id"
          input type="hidden" name="artist_id" value=@artist.id
          input type="hidden" name="filename" value=a
          input type="submit"

- @albums.each do |type,albums|
  - next if albums.count == 0
  h2 = type.capitalize

  table
    - albums.each do |a|
      tr class=(a.is_mock ? '' : 'album-have')
        td = a.year
        td
          = "#{a.discogs_id} "
          a href="https://www.discogs.com/release/#{a.discogs_id}" url
        td
          = a.title
          div.details = a.filename
        td = a.formats

